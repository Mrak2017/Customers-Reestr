<Page x:Class="CustomersReestr.MainTable"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CustomersReestr"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="Реестр покупателей - Основной экран">

    <Grid>
        <Grid HorizontalAlignment="Left" Height="790" Margin="10,10,0,0" VerticalAlignment="Top" Width="1190">
            <Grid.RowDefinitions>
                <RowDefinition Height="36*"/>
                <RowDefinition Height="209*"/>
                <RowDefinition Height="17*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="19*"/>
                <ColumnDefinition Width="103*"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Row="1" Grid.Column="1" Background="White">
                <DataGrid x:Name="clientsGrid" AutoGenerateColumns="True" />
            </Border>
            <Border Grid.Row="1" Background="LightBlue" Margin="0,0,0,34" Grid.RowSpan="2">
                <WrapPanel>
                    <Button x:Name="btnClientsGrid" Width="63" Margin="5" Height="22" Click="Button_Click">Clients</Button>
                    <Button Width="63" Margin="5" Height="22" Click="Button_Click_1">Notifications</Button>
                    <Button Width="63" Margin="5" Height="22" Click="Button_Click_2">New</Button>
                    <Button Width="64" Margin="5" Height="22" Click="Button_Click_3">Admin</Button>
                </WrapPanel>
            </Border>
            <Border Grid.Row="0" Background="LightBlue"/>
            <Border Grid.Row="0" Grid.Column="1" Background="LightBlue">
                <WrapPanel>
                    <Label Content="CuStomersREestr" HorizontalAlignment="Left" VerticalAlignment="Top" Width="125" RenderTransformOrigin="0.192,0.037" Height="36"/>
                    <TextBox Height="24" TextWrapping="Wrap" Text="Search" Width="160" TextChanged="TextBox_TextChanged_1"/>
                    <CheckBox Content="login" Width="127" Checked="CheckBox_Checked_1"/>
                </WrapPanel>
            </Border>
            <Border Grid.Row="2" Grid.Column="0" Background="LightBlue"/>
            <Border Grid.Row="2" Grid.Column="1" Background="Gray">
                <StatusBar/>
            </Border>
            <Image HorizontalAlignment="Left" Height="86" VerticalAlignment="Top" Width="82" Source="img.png" />
        </Grid>

    </Grid>
</Page>
